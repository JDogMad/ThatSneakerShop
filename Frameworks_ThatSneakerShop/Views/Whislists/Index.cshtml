@model IEnumerable<Frameworks_ThatSneakerShop.Models.Whislist>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method="get" asp-action="Index" asp-controller="Whislist">
    <p>
        <input type="text" name="search" value=@ViewData["searchField"] />
        <input type="submit" value = "Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shoe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                @if (item.Hidden == false)
                {

                    <td>
                        @Html.DisplayFor(modelItem => item.Shoe.ShoeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Shoe.ShoeDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Shoe.ShoePrice)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.WhislistId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WhislistId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WhislistId">Delete</a>
            </td>

            }
        </tr>
}

        @using (Html.BeginForm("UpdateData", "Whislists", FormMethod.Post))
        {
                <button type="submit">Show All Data</button>
        }
    </tbody>
</table>
